<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_alert_dialog"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aten_o"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/mensagem_alert_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <LinearLayout
        android:id="@+id/linearLayoutValores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/botao_negative"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:textAllCaps="false"
            android:textColor="@color/purple_200"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="start|center_vertical"/>

        <TextView
            android:id="@+id/botao_positive"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/purple_200"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="end|center_vertical" />
    </LinearLayout>

</LinearLayout>
