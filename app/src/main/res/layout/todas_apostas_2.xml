<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/gradient_background"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/numero_acertos"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/numero_acertos"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/nome"
            android:layout_alignStart="@id/nome"
            android:layout_alignEnd="@id/nome">

            <TextView
                android:id="@+id/numero01"
                style="@style/botao_quadrado_cardview"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/numero02"
                style="@style/botao_quadrado_cardview"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/numero03"
                style="@style/botao_quadrado_cardview"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/numero04"
                style="@style/botao_quadrado_cardview"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/numero05"
                style="@style/botao_quadrado_cardview"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/numero06"
                style="@style/botao_quadrado_cardview"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/numero07"
                style="@style/botao_quadrado_cardview"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/numero08"
                style="@style/botao_quadrado_cardview"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/numero09"
                style="@style/botao_quadrado_cardview"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/numero10"
                style="@style/botao_quadrado_cardview"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="2dp"
                android:gravity="center"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>