<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".fragments.Games">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/lista_de_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lista_de_games"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/noot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:rowCount="4"
            android:columnCount="2"
            app:layout_constraintTop_toBottomOf="@+id/lista_de_games"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/botao_deslogar">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/game_mega_tola"
                style="@style/image_view_games_style"
                android:background="@drawable/shape_games"
                android:drawableTop="@drawable/ic_game_50"
                android:text="MEGA-TOLA"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/game_loto_tola"
                style="@style/image_view_games_style"
                android:background="@drawable/shape_games"
                android:drawableTop="@drawable/ic_game_50"
                android:text="ROLETOLA"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/game_quina_tola"
                style="@style/image_view_games_style"
                android:background="@drawable/shape_games"
                android:drawableTop="@drawable/ic_game_50"
                android:text="QUINA-TOLA"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/game_bicho_tola"
                style="@style/image_view_games_style"
                android:background="@drawable/shape_games"
                android:drawableTop="@drawable/ic_game_50"
                android:text="BICHO-TOLA"/>
        </GridLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botao_deslogar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/voltar"
            android:textColor="@drawable/button_selector"
            android:background="@drawable/background_button_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>