<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_perfil"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <View
            android:id="@+id/view_perfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/user_foto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_account_circle"
            app:layout_constraintStart_toStartOf="@+id/view_perfil"
            app:layout_constraintEnd_toEndOf="@+id/view_perfil"
            app:layout_constraintTop_toTopOf="@+id/view_perfil"
            app:layout_constraintBottom_toBottomOf="@id/view_perfil"/>

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_account_circle"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/view_perfil"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_email_cadastro"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/img_user"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/img_celular"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_phone_cadastro"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/email_perfil"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/nome_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/img_user"
            app:layout_constraintTop_toTopOf="@id/img_user"/>

        <TextView
            android:id="@+id/email_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/img_email"
            app:layout_constraintTop_toTopOf="@id/img_email"/>

        <TextView
            android:id="@+id/celular_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/img_celular"
            app:layout_constraintTop_toTopOf="@id/img_celular"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>