<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="texto_cadastro_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">13dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#54FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">13sp</item>
    </style>

    <style name="container_components_cadastro_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">410dp</item>
        <item name="android:background">@drawable/view_container_background</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="botao_redondo_numeros">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:background">@drawable/botao_redondo_selector</item>
        <item name="android:textColor">@drawable/button_selector</item>
    </style>

    <style name="botao_redondo_cardview">
        <item name="android:layout_width">33dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_botao_redondo_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="botao_quadrado_cardview">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/contorno_quadrado</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="image_view_games_style">
        <item name="android:layout_margin">22dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:padding">30dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>